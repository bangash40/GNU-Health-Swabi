            <separator string="Clinical and Physical exam" colspan="4" id="separator_clinical_physical_new"/>
            <field name="evaluation_summary" colspan="4"/>
            <newline/>
            <label name="appointment"/>
            <field name="appointment"/>
        </page>

        <page string="Tests" id="tesedas_aldfasdlfj">
            <field name="tests" colspan="2" height="100"/>
            <field name="imaging_tests" colspan="2" height="100"/>
        </page>	
        
        <page string="Conditions" id="prescription_conditions_page">
            <field name="conditions" colspan="2" height="100"/>
        </page>	

