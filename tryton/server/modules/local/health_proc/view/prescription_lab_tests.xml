            <field name="surgery_date"/>
            <label name="surgery"/>
            <field name="surgery"/>      
		    <button colspan="2" name="confirm_surgery" help="Charge anesthesia evaluation and generate OT Booking request" string="Confirm Surgery" confirm="It will initiate the hospital protocols for surgeries, Are you sure?"/>
